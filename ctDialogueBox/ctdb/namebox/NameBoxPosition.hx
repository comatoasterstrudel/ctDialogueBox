package ctDialogueBox.ctdb.namebox;

/**
 * an enum to dictate where the name box will appear by default
 */
enum NameBoxPosition
{
    /**
     * the name box will appear on the left of the dialogue box
     */
    Left;
    
    /**
     * the name box will appear in the center of the dialogue box
     */
    Center;
    
    /**
     * the name box will appear on the right of the dialogue box
     */
    Right;
}